@using Web_Music_v3.Models
@model Album
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Music</title>
    <link rel="stylesheet" href="~/css/Admin/siteTrackAdd.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <form>
            <div class="cont">
                <div class="window__addTrack">
                    <div class="title__logo">
                        <div>ДОБАВИТЬ АЛЬБОМ</div>
                    </div>
                   
                    <input asp-for="Title" type="text" class="input__data" placeholder="Наименование" required>                    

                    <input asp-for="Author" type="text" class="input__data" placeholder="Автор" required>

                    <input asp-for="IsVisible" type="checkbox">
                    <label for="checkbox">Ваш альбом видят другие пользователи</label>
                    <p style="color:red">@Html.ValidationMessage("error_createAlbum")</p>
                    <input asp-controller="Album" asp-action="CreateAlbum" class="btn__addTrack" type="submit" value="Добавить" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>

